# SentinentX Configuration Template for Ubuntu 24.04 LTS
# Copy this file to .env and customize for your deployment

# Application Configuration
APP_NAME="SentinentX"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# Logging Configuration
LOG_CHANNEL=structured
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration (PostgreSQL 16)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=sentinentx
DB_USERNAME=sentinentx
DB_PASSWORD=sentinentx_secure_password

# Redis Configuration (Redis 7)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=sentx_

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_DRIVER=redis

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration
BROADCAST_DRIVER=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
GROK_API_KEY=your-grok-api-key-here

# Trading Configuration
BYBIT_API_KEY=your-bybit-testnet-api-key
BYBIT_API_SECRET=your-bybit-testnet-secret
BYBIT_TESTNET=true
BYBIT_RECV_WINDOW=5000

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_ENABLED=true

# Notification Configuration
NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#trading-alerts

# Security Configuration
ALLOWED_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,XRPUSDT
HMAC_SECRET_KEY=your-hmac-secret-key
API_RATE_LIMIT_PER_MINUTE=60

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=6001
WEBSOCKET_SSL_ENABLED=false

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30

# Risk Management Configuration
DEFAULT_RISK_PROFILE=moderate
MAX_POSITIONS_PER_SYMBOL=1
MAX_TOTAL_POSITIONS=5
DEFAULT_LEVERAGE=10
MAX_LEVERAGE=125

# Performance Configuration
OPCACHE_ENABLED=true
QUERY_CACHE_ENABLED=true
VIEW_CACHE_ENABLED=true

# Ubuntu 24.04 LTS Specific
SYSTEMD_WATCHDOG_TIMEOUT=300
LOG_STRUCTURED_FORMAT=true
SECURITY_HEADERS_ENABLED=true

# Development (set to false in production)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
