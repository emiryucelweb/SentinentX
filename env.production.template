# ========================================
# SENTINENTX PRODUCTION ENVIRONMENT
# ========================================
# Kopyala: cp env.production.template .env
# Sonra değerleri güncelle

# ========================================
# LARAVEL CORE
# ========================================
APP_NAME=SentinentX
APP_ENV=production
APP_DEBUG=false
APP_URL=https://sentx.example.com
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# APP KEY
APP_KEY=base64:PASTE_YOUR_KEY_HERE

# ========================================
# LOGGING
# ========================================
# Logging Configuration
LOG_CHANNEL=json
LOG_LEVEL=info
LOG_STACK=json,trading,ai,risk,lab
LOG_DAILY_DAYS=30

# JSON Logging Channels
LOG_JSON_FORMAT=true
LOG_JSON_APPEND_NEWLINE=true

# Specialized Log Channels
LOG_TRADING_CHANNEL=trading
LOG_AI_CHANNEL=ai
LOG_RISK_CHANNEL=risk
LOG_LAB_CHANNEL=lab

# Log Retention
LOG_RETENTION_DAYS=30
LOG_ROTATION_ENABLED=true

# ========================================
# DATABASE (MySQL/PostgreSQL)
# ========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sentx
DB_USERNAME=sentx
DB_PASSWORD=STRONG_DB_PASSWORD

# ========================================
# CACHE & QUEUE
# ========================================
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ========================================
# REDIS
# ========================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# EXCHANGE / BYBIT (Stage 2: TESTNET!)
# ========================================
EXCHANGE_BYBIT_CATEGORY=linear
BYBIT_TESTNET=true
BYBIT_API_KEY=your_testnet_key
BYBIT_API_SECRET=your_testnet_secret
BYBIT_RECV_WINDOW=15000

# ========================================
# TRADING
# ========================================
TRADING_MAX_LEVERAGE=75
TRADING_MODE_ONE_WAY=true
TRADING_MARGIN_MODE=cross
TRADING_RISK_DAILY_MAX_LOSS_PCT=20
TRADING_RISK_COOLDOWN_MIN=60
TRADING_RISK_MAX_CONCURRENT=4
TRADING_RISK_ATR_K=1.5
TRADING_RISK_ENABLE_COMPOSITE_GATE=true
TRADING_USDT_GUARD_MIN=0.98
TRADING_USDT_GUARD_MAX=1.02
TRADING_KILL_SWITCH=false

# ========================================
# LAB
# ========================================
LAB_TEST_MODE=true
LAB_SCAN_ENABLED=true
LAB_INITIAL_EQUITY=10000
LAB_ACCEPT_MIN_PF=1.2
LAB_ACCEPT_MAX_DD=15
LAB_ACCEPT_MIN_SHARPE=0.8

# ========================================
# NOTIFIERS
# ========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SLACK_WEBHOOK_URL=
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=sentx@example.com
MAIL_FROM_NAME="SentinentX"

# ========================================
# ALERT / DEDUP
# ========================================
ALERT_DEDUP_TTL_SEC=3600

# ========================================
# SECURITY & COMPLIANCE
# ========================================
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# ========================================
# PERFORMANCE & CACHE
# ========================================
CACHE_TTL=3600
VIEW_CACHE_TTL=86400

# ========================================
# HEALTH CHECKS
# ========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_TIMEOUT=30

# ========================================
# BACKUP & RECOVERY
# ========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_NOTIFICATION_ENABLED=true

# ========================================
# CANARY DEPLOYMENT
# ========================================
CANARY_ENABLED=false
CANARY_SYMBOL=BTCUSDT
CANARY_MAX_QTY=0.001
CANARY_DURATION_HOURS=4

# ========================================
# NOTIFICATION SETTINGS
# ========================================
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_TELEGRAM_ENABLED=true
NOTIFICATIONS_SLACK_ENABLED=true
NOTIFICATIONS_EMAIL_ENABLED=false

# Alert deduplication
ALERT_DEDUP_ENABLED=true
ALERT_DEDUP_TTL=3600
