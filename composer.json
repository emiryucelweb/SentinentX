{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/slack-notification-channel": "^3.6",
        "laravel/tinker": "^2.10.1",
        "openai-php/laravel": "^0.15.0",
        "predis/predis": "^3.1",
        "spatie/laravel-data": "^4.17",
        "spatie/laravel-schemaless-attributes": "^2.5"
    },
    "require-dev": {
        "cyclonedx/cyclonedx-php-composer": "*",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.86",
        "giorgiosironi/eris": "^1.0",
        "infection/infection": "*",
        "larastan/larastan": "^3.6",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^8.0",
        "phpstan/phpstan": "*",
        "phpunit/phpunit": "^11.1",
        "psalm/plugin-laravel": "^3.0",
        "psalm/psalm": "*",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ignition": "^2.0",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "test:coverage": [
            "@php artisan config:clear --ansi",
            "vendor/bin/phpunit --coverage-html coverage-report --coverage-clover coverage.xml"
        ],
        "test:unit": [
            "@php artisan config:clear --ansi",
            "vendor/bin/phpunit --testsuite=Unit"
        ],
        "test:feature": [
            "@php artisan config:clear --ansi",
            "vendor/bin/phpunit --testsuite=Feature"
        ],
        "code:analyse": [
            "vendor/bin/phpstan analyse app --level=8 --no-progress"
        ],
        "code:fix": [
            "vendor/bin/pint"
        ],
        "code:check": [
            "vendor/bin/pint --test",
            "vendor/bin/phpcs app --standard=PSR12 --extensions=php"
        ],
        "ci:full": [
            "@code:check",
            "@code:analyse",
            "@test:coverage"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "infection/extension-installer": true,
            "cyclonedx/cyclonedx-php-composer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
