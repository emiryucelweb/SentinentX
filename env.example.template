# ========================================
# SENTINENTX ENVIRONMENT CONFIGURATION
# ========================================
# ⚠️  SECURITY WARNING: Never commit real API keys or secrets to version control!
# ⚠️  Use strong, unique passwords for production environments
# ⚠️  Rotate all secrets regularly in production

# ========================================
# LARAVEL CORE
# ========================================
APP_NAME=SentinentX
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Generate with: php artisan key:generate
APP_KEY=

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For Development: Use SQLite for quick setup
DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# For Production: Use PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=sentinentx
DB_USERNAME=sentinentx
DB_PASSWORD=your-secure-password

# ========================================
# CACHE & QUEUE (Redis)
# ========================================
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# For Production: Use Redis
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# ========================================
# EXCHANGE API CONFIGURATION
# ========================================
# ⚠️  ALWAYS use testnet for development and testing!
BYBIT_TESTNET=true
BYBIT_API_KEY=your_bybit_testnet_api_key
BYBIT_API_SECRET=your_bybit_testnet_api_secret
BYBIT_RECV_WINDOW=15000

# ========================================
# AI PROVIDERS CONFIGURATION
# ========================================
# ⚠️  Required: All three AI providers needed for consensus system

# OpenAI GPT-4 (Get key from: https://platform.openai.com/api-keys)
OPENAI_ENABLED=true
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Google Gemini (Get key from: https://aistudio.google.com/app/apikey)
GEMINI_ENABLED=true
GEMINI_API_KEY=AIzaSy_your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Grok AI (Get key from: https://console.x.ai/)
GROK_ENABLED=true
GROK_API_KEY=grok_your_grok_api_key_here
GROK_MODEL=grok-2-1212

# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
TELEGRAM_BOT_TOKEN=7123456789:your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ========================================
# SECURITY CONFIGURATION
# ========================================
# ⚠️  Generate with: openssl rand -hex 32
HMAC_SECRET=generate_with_openssl_rand_hex_32
HMAC_TTL=60

# IP Allowlist (comma-separated CIDR blocks)
IP_ALLOWLIST_ENABLED=true
IP_ALLOWLIST="127.0.0.1/32,::1/128"

# ========================================
# MARKET DATA CONFIGURATION
# ========================================
# CoinGecko API for market data and sentiment analysis
COINGECKO_API_KEY=your_coingecko_api_key_here

# ========================================
# TRADING CONFIGURATION
# ========================================
TRADING_MAX_LEVERAGE=75
TRADING_RISK_DAILY_MAX_LOSS_PCT=20
TRADING_KILL_SWITCH=false

# Risk Profile Selection (conservative|moderate|aggressive|all)
RISK_PROFILE=moderate

# ========================================
# COMPREHENSIVE LOGGING CONFIGURATION
# ========================================
# Enable detailed AI decision and trade logging
ENABLE_COMPREHENSIVE_LOGS=false
AI_DECISION_LOGGING=false
POSITION_LOGGING=false
PNL_DETAILED_LOGGING=false

# Log level (emergency|alert|critical|error|warning|notice|info|debug)
LOG_LEVEL=error

# ========================================
# LAB BACKTESTING CONFIGURATION
# ========================================
LAB_TEST_MODE=true
LAB_INITIAL_EQUITY=10000
